<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Demoliq{% endblock %}</title>

        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('css/open-sans.css') }}">
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">


        <link rel="icon" href="{{ asset('img/people_mini.png') }}"/>



    </head>
    <body>
        <div class="container-fluid">
                <header>
                    <div>

                        <nav class="nav">
                            <a href="{{ path ('home') }}"><img class ="img-fluid" alt = "Demoliq" src="{{ asset('img/people.png') }}"></a>
                            <p class="nav-link"><strong>Demoliq</strong></p>
                            {% if app.user %}
                            <a class="nav-link" href="{{ path ('question_list') }}">Débattre</a>
                            <a class="nav-link" href="{{ path ('question_create') }}">Ajouter</a>
                            <a class="nav-link" href="{{ path ('monCompte') }}">Mon compte</a>
                            <a class="nav-link" href="{{ path ('app_logout') }}">Deconnexion</a>

                            {% else %}
                             <a class="nav-link" href="{{ path ('question_list') }}">Débattre</a>
                             <a class="nav-link" href="{{ path ('question_create') }}">Ajouter</a>
                             <a class="nav-link float-right" href="{{ path('app_register') }}">Inscription</a>
                             <a class="nav-link float-right" href="{{ path('app_login') }}">Se connecter</a>
                            {% endif %}

                        </nav>
                    </div>


              </header>

              <main class="content">
                  {#affichage des éventuels flash message#}
                  {% for label, messages in app.flashes %}
                      {% for message in messages %}
                        <div class="alert alert-{{ label }}">{{ message }}</div>
                      {% endfor %}
                  {% endfor %}

                  {% block content %}{% endblock %}
             </main>

            <div>
                <footer>

                    <nav class="nav text-center">
                        <a class="nav-link mx-auto" href="{{ path ('home') }}">Accueil</a>
                        <a class="nav-link mx-auto" href="{{ path ('faq') }}">FAQ</a>
                        <a class="nav-link mx-auto" href="{{ path ('CGU') }}">CGU</a>
                        <a class="nav-link mx-auto" href="{{ path ('fonctionnement') }}">Fonctionnement</a>
                    </nav>

                </footer>
            </div>


        </div>

        <script src="{{ asset('js/jquery.js') }}"></script>
        <script src="{{ asset('js/bootstrap.js') }}"></script>

    </body>
</html>
